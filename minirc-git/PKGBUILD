# Maintainer: Sam Stuewe <halosghost at archlinux dot info>
_gitname=minirc
pkgname="${_gitname}-git"
pkgver=61.61702d2
pkgrel=1
pkgdesc="A minimalist init system using busybox"
arch=('any')
url="https://github.com/hut/${_gitname}.git/"
license=('GPLv2')
conflicts=('systemd-sysvcompat' 'sysvinit')
depends=('busybox')
optdepends=('systemd: udev support')
makedepends=('git')
source=("${_gitname}::git://github.com/hut/${_gitname}.git")
sha256sums=('SKIP')
backup=('etc/inittab')

pkgver() {
  cd "${_gitname}"
  echo "$(git rev-list --count HEAD).$(git describe --always )"
}

package() {
  cd "${_gitname}"

  # Execute Install Script
  ROOT="${pkgdir}" ./setup.sh --force
}

# vim:set ts=2 sw=2 et:
