# Maintainer: Sam Stuewe <halosghost at archlinux dot info>
pkgname=ngame
pkgver=2.0
pkgrel=1
pkgdesc="Metanet's unique 2D puzzle/action platform game"
arch=('any')
url="http://www.metanetsoftware.com/"
license=('custom')
source=("${pkgname}-${pkgver}.tar::http://www.thewayoftheninja.org/Nv2-Linux.tar"
        "${pkgname}.sh")
sha256sums=('72aa1d7e23e7d6cde640f4fab884192ca0ef0ed85d9a16c150c68911824614db'
            'c3f544fda4ff2a99950ee29c94f202fbff784f37f21cd1292280d7cca416f2d6')

package() {
   install -Dm644 license.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
   install -Dm644 Nv2.swf "${pkgdir}/usr/share/${pkgname}/${pkgname}.swf"
   install -Dm755 "${pkgname}.sh" "${pkgdir}/usr/bin/${pkgname}"
}

